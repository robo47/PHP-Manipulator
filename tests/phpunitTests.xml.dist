<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    backupGlobals="false"
    backupStaticAttributes="false"
    colors="false"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    syntaxCheck="false"
    bootstrap="TestHelper.php">
    <filter>
        <whitelist>
            <directory>./Tests/Constraint/</directory>
            <directory>./Tests/Stub/</directory>
            <file>./Tests/Util.php</file>
            <file>./Tests/TestCase.php</file>
            <exclude>
                <directory suffix="Test.php">./Tests/</directory>
            </exclude>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html"
             target="./tmp/testsreport"
             charset="UTF-8"
             yui="true"
             highlight="false"
             lowUpperBound="35"
             highLowerBound="70" />
    </logging>
    <testsuites>
        <testsuite name="PHP\Manipulator Tests-Test Suite">
            <directory suffix="Test.php">./Tests/Constraint/</directory>
            <directory suffix="Test.php">./Tests/Stub/</directory>
            <file>./Tests/UtilTest.php</file>
            <file>./Tests/TestCaseTest.php</file>
        </testsuite>
    </testsuites>
</phpunit>